# Periapan Awal adalah memasang perangkat lunak yang nantinya
# digunakan sebagai perkakas dalam pembuat distro dengan teknik debootsrap.
# Perangkat lunak yang di Butuhkan
# Buka Terminal dan Ketik perintah berikut :
sudo apt-get install debootstrap syslinux isolinux squashfs-tools genisoimage memtest86+ rsync -y

#Gunakan Perintah dibawah ini secara berurutan jika ingin memulai kembali proses debootsrap yang sebelumnya
#Gunakan Perintah cd Project jika tidak berada di lokasi Project
cd $HOME/Project
sudo mount --bind /dev/ root32/dev
sudo chroot root32
mount -t proc none /proc && mount -t sysfs none /sys && mount -t devpts none /dev/pts
export HOME=/root && export LC_ALL=C
